{
    "name": "minizord/container",
    "description": "Um simples container para injeção de dependência. Esse pacote é um Zord do framework Minizord em construção.",
    "type": "library",
    "license": "mit",
    "autoload": {
        "psr-4": {
            "Minizord\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minizord\\Container\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test-cover": "./vendor/bin/pest --coverage",
        "test-html": "./vendor/bin/pest --coverage-html ./html"
    },
    "authors": [
        {
            "name": "Mauricio Roberto",
            "email": "mauricio.roberto.dev@gmail.com",
            "homepage": "https://mauricioroberto.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "psr/container": "^2.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21.1"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
